[Unit]
Description=Mount Storage
Wants=network-online.target
After=network-online.target
Before=docker.service mount-check.service

[Service]
Type=notify
ExecStartPre={{ script_dir }}/{{ script_name }} --start
ExecStart={{ script_dir }}/{{ script_name }}
ExecStop={{ script_dir }}/{{ script_name }} --stop
TimeoutStopSec=180s
TimeoutStartSec=180s
Restart=on-failure
RestartSec=30s

[Install]
WantedBy=multi-user.target